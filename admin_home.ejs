                    <td><%- student[i].enroll %></td>
                    <td><%- student[i].contact %></td>
                    <td><%- student[i].gender %></td>
                    <td><%- student[i].city %></td>
                    <td><%- student[i].email %></td>
                    <!-- <td><%- student[i].nickname %></td> -->
                    <td><a href="/delete-student?id= <%- student[i].id %>"><button >Delete</button></a>
                        <a href="/update-student?id= <%- student[i].id %>"><button>Update</button></a>
                        <a href="/view_profile?id=<%- student[i].id %>"><button type="submit"> view</button>
                        <form action="/dashboard_admin" method="post">

                            <input type="text" value="<%- student[i].id %>" name="student_id" style="display :none" >
                            <!-- <button type="submit"> view</button> -->
                        </form>
                        
                    </td>
                </tr>
                <% } %>
        <% }else{ %>
